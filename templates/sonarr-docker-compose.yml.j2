version: '3.7'
services:
  sonarr:
    image: ghcr.io/linuxserver/sonarr
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Bucharest
    volumes:
      - {{ sonarr.config }}:/config
      - {{ sonarr.media }}:/tv
      - {{ sonarr.data }}:/data
    ports:
      - 8989:8989
    restart: unless-stopped